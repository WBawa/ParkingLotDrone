<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".MainActivity">

    <dji.ux.widget.PreFlightStatusWidget
            android:layout_width="490dp"
            android:layout_height="66dp"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintTop_toTopOf="parent" />

    <Button
            android:text="Take Off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/take_off_button"
            custom:layout_constraintTop_toTopOf="parent"
            custom:layout_constraintBottom_toBottomOf="parent"
            custom:layout_constraintHorizontal_bias="0.499"
            custom:layout_constraintVertical_bias="0.374" />

    <Button
            android:text="Land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/land_button"
            android:layout_marginTop="34dp"
            custom:layout_constraintTop_toBottomOf="@+id/take_off_button"
            custom:layout_constraintBottom_toBottomOf="parent"
            custom:layout_constraintEnd_toEndOf="parent"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintHorizontal_bias="0.499"
            custom:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
