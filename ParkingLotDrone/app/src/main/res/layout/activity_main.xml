<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".MainActivity">

    <Button
            android:text="@string/takeoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/take_off_button"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintBottom_toBottomOf="parent"
            custom:layout_constraintEnd_toStartOf="@+id/land_button"
            custom:layout_constraintHorizontal_bias="0.829"
            android:layout_marginBottom="4dp" />

    <Button
            android:text="@string/land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/land_button"
            custom:layout_constraintBottom_toBottomOf="parent"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintEnd_toEndOf="parent"
            custom:layout_constraintHorizontal_bias="0.606"
            android:layout_marginBottom="4dp" />

    <TextureView
            android:layout_width="721dp"
            android:layout_height="331dp"
            android:id="@+id/textureView"
            custom:layout_constraintTop_toTopOf="parent"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintEnd_toEndOf="parent"
            custom:layout_constraintBottom_toBottomOf="parent"
            custom:layout_constraintVertical_bias="0.35"
             />

    <Button
            android:text="forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forward_button"
            custom:layout_constraintTop_toTopOf="parent"
            custom:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="68dp" />

    <Button
            android:text="Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_button"
            custom:layout_constraintEnd_toStartOf="@+id/right_button"
            custom:layout_constraintTop_toBottomOf="@+id/forward_button"
            custom:layout_constraintBottom_toTopOf="@+id/back_button" />

    <Button
            android:text="back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_button"
            custom:layout_constraintEnd_toEndOf="parent"
            custom:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="76dp"
            custom:layout_constraintTop_toBottomOf="@+id/forward_button"
            custom:layout_constraintVertical_bias="0.219" />

    <Button
            android:text="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            custom:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/right_button"
            custom:layout_constraintTop_toBottomOf="@+id/forward_button"
            custom:layout_constraintBottom_toTopOf="@+id/back_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
